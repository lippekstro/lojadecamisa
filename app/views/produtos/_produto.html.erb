<tr>
    <td><%= produto.nome %></td>
    <td><%= produto.descricao %></td>
    <td><%= produto.preco %></td>
    <td><%= button_to "Remover", produto, method: :delete, class: "btn btn-danger", data: {confirm: "Tem certeza que deseja apagar #{produto.nome}?"} %></td>
    <td><%= link_to "Editar", edit_produto_path(produto), class: "btn btn-warning"%></td>
</tr>