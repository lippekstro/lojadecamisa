<% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
        <%= flash[:notice] %>
    </div>
<% end %>

<% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
        <%= flash[:error] %>
    </div>
<% end %>


<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Departamento</th>
        </tr>
    </thead>

    <tbody>
        <%= render @produtos %>
    </tbody>

</table>

<%= link_to "Criar Novo Produto", new_produto_path, class: "btn btn-success" %>